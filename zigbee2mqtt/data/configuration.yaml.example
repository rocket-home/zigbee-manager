# Zigbee2MQTT Configuration
# Подключение к MQTT серверу

# Основные настройки
permit_join: false
mqtt:
  base_topic: zigbee2mqtt
  server: mqtt://mqtt:1883
  # Опционально: аутентификация
  # user: your_username
  # password: your_password
  client_id: zigbee2mqtt_bridge
  keepalive: 60
  version: 4  # MQTT протокол версии 4 (совместим с 3.11)
  clean: true
  reconnect_period: 10
  reject_unauthorized: false

# Настройки Zigbee адаптера
serial:
  port: /dev/ttyACM0
  adapter: zstack

# Настройки сети (БУДУТ ЗАМЕНЕНЫ НА БЕЗОПАСНЫЕ ЗНАЧЕНИЯ)
network:
  pan_id: 6754
  extended_pan_id: 'DD:DD:DD:DD:DD:DD:DD:DD'
  channel_list: [11, 15, 20, 25]
  network_key: GENERATE

# Настройки безопасности
security_policy:
  network_key: true
  application_key: true
  tc_link_key: true

# Настройки устройств
device_options:
  legacy: false

# Настройки логирования
log_level: info
log_output:
  - console
  - file

# Настройки веб-интерфейса
frontend:
  port: 8080
  host: 0.0.0.0

# Настройки Home Assistant
homeassistant: false

# Настройки устройств (примеры)
devices:
  # Пример устройства
  # '0x00158d0009b1b2b3':
  #   friendly_name: 'My Device'
