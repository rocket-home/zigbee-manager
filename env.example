# Zigbee2MQTT и MQTT Broker Environment Variables
# Скопируйте этот файл в .env и настройте под свои нужды

# MQTT Broker настройки
MQTT_PORT=1883
MQTT_WS_PORT=9001
MQTT_USER=admin
MQTT_PASSWORD=your_secure_password
MQTT_BASE_TOPIC=zigbee2mqtt
MQTT_SERVER=mqtt://mqtt:1883
MQTT_CLIENT_ID=zigbee2mqtt_bridge
MQTT_KEEPALIVE=60
MQTT_VERSION=4
MQTT_CLEAN=true
MQTT_RECONNECT_PERIOD=10
MQTT_REJECT_UNAUTHORIZED=false
MQTT_ALLOW_ANONYMOUS=true
MQTT_LOG_FILE=/mosquitto/log/mosquitto.log
MQTT_LOG_TYPE=all
MQTT_LOG_TIMESTAMP=true
MQTT_PERSISTENCE=true
MQTT_PERSISTENCE_LOCATION=/mosquitto/data/
MQTT_MAX_INFLIGHT=20
MQTT_MAX_QUEUED=100

# Zigbee2MQTT настройки
ZIGBEE2MQTT_PORT=8080
ZIGBEE2MQTT_HOST=0.0.0.0
ZIGBEE_ADAPTER_PORT=/dev/ttyACM0
ZIGBEE_ADAPTER=zstack
PERMIT_JOIN=false

# MQTT дополнительные настройки
MQTT_PASSWORD_FILE=
MQTT_ACL_FILE=
MQTT_EXTRA_CONFIG=

# Облачный MQTT брокер (мост)
CLOUD_MQTT_ENABLED=false
CLOUD_MQTT_HOST=mq.rocket-home.ru
CLOUD_MQTT_PORT=8883
CLOUD_MQTT_PROTOCOL=3.11
CLOUD_MQTT_USERNAME=ffffffff-ffff-ffff-ffff-ffffffffffff
CLOUD_MQTT_PASSWORD=your_secure_password
CLOUD_MQTT_CLIENT_ID=zigbee-manager-bridge
CLOUD_MQTT_KEEPALIVE=60
CLOUD_MQTT_CLEAN=true

# Zigbee сетевые параметры (будут сгенерированы автоматически)
ZIGBEE_PAN_ID=0x6754
ZIGBEE_EXTENDED_PAN_ID=DD:DD:DD:DD:DD:DD:DD:DD
ZIGBEE_CHANNELS=11, 15, 20, 25
ZIGBEE_NETWORK_KEY=GENERATE

# Zigbee безопасность
ZIGBEE_SECURITY_NETWORK_KEY=true
ZIGBEE_SECURITY_APPLICATION_KEY=true
ZIGBEE_SECURITY_TC_LINK_KEY=true

# Zigbee настройки устройств
ZIGBEE_DEVICE_LEGACY=false

# Zigbee логирование
ZIGBEE_LOG_LEVEL=info
ZIGBEE_LOG_OUTPUT=console

# Zigbee Home Assistant
ZIGBEE_HOMEASSISTANT=false

# Временная зона
TZ=Europe/Moscow

# Docker настройки
COMPOSE_PROJECT_NAME=zigbee-manager 

# UID и GID пользователя для синхронизации прав с контейнером
UID=1000
GID=1000 